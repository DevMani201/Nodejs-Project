{{>header}}
{{>menu}}

<section id="main-weather">
    <div class="main-weather">
        <div class="container">
            <form>
                <div class="search">
                    <input type="text" class="search_input" id="city" placeholder="Enter City Name">
                    <a href="#" class="search_icon" id="searchdata"><i class="fa fa-search"></i></a>
                </div>
            </form>
            <section id="section-main">
                <div class="main-content">
                    <div class="top-layer">
                        <div class="day-time-date">
                            <div class="day">
                                <p id="day">Wed</p>
                            </div>
                            <div class="time">
                                <p id="time">17:27</p>
                            </div>
                            <div class="date">
                                <p id="date">23,March</p>
                            </div>
                        </div>
                    </div>
                    <div class="shows-output">
                        <div class="cityname">
                            <span id="loc" class="fa"></span>
                            <span id="output">Please Enter Valid City Name</span>
                        </div>
                        <div class="showhide">
                            <div class="sunrise-sunset">
                                <img id="rise-img" src="" alt="sunrise">
                                <span id="rise" class="fa">
                                </span>
                                <img id="set-img" src="" alt="sunset">
                                <span id="set" class="fa">
                                </span>
                            </div>
                            <div class="tem">
                                <span id="temp">32</span>
                                <span><sup>0</sup>C</span>
                            </div>

                            <div class="tem-tem_stauts">

                                <div class="additional">
                                    <p id="humidity"></p>
                                    <p id="pressure">1000mbar</p>
                                    <p id="windspeed">14.8km/h</p>

                                </div>
                                <div class="tem-status">
                                    {{!-- <p id="temp-status" class="fa">&#127787;</p> --}}
                                    <img id="temp-status" src="" alt="weatherstatus">
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>



{{>footer}}